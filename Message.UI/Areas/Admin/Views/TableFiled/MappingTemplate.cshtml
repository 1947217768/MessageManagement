                <var>public @(entityViewTableFiled.StypeName) @(entityViewTableFiled.SfiledName) { get; set; }</var>
            }
            else if (entityViewTableFiled.IdataTypeId == 2 && entityViewTableFiled.SfiledName == "Id")
            {
                <var>[Key]</var>
                <var>public @(entityViewTableFiled.StypeName) @(entityViewTableFiled.SfiledName) { get; set; }</var>
            }
            else
            {
                <var>public @(entityViewTableFiled.StypeName) @(entityViewTableFiled.SfiledName) { get; set; }</var>
